class Estudiante{

  int codigo;
  String nombre;
  String genero;
  int edad;
//metodo Constructor
  public Estudiante(int codigo, String nombre, String genero, int edad){

    this.codigo = codigo;
    this.nombre = nombre;
    this.genero = genero;
    this.edad = edad;
        
  }
  
  //comportamientos
  void registraDatos(int codigo1, String nombre1, String genero1, int edad1){
    codigo = codigo1;
    nombre = nombre1;
    genero = genero1;
    edad = edad1;
  }

  void muestraDatos(){
    System.out.println("El alumno con codigo " + codigo + ", llamdo " + nombre + " de genero " + genero + " tiene " + edad + " a√±os.");
  }
}
