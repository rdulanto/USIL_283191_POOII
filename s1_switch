import java.util.Scanner;

class Main {
  public static void main(String[] args) {
    Scanner sc = new Scanner(System.in);


    System.out.println("Ingrese un numero que represente un dia de la semana: ");
    int dia = Integer.parseInt(sc.nextLine());
    String semana;

    switch(dia){
      case 1:
        semana = "Lunes";
        break;
      case 2:
        semana = "Martes";
        break;
      case 3:
        semana = "Miercoles";
        break;
      case 4:
        semana = "Jueves";
        break;
      case 5:
        semana = "Viernes";
        break;
      case 6:
        semana = "Sabado";
        break;
      case 7:
        semana = "Domingo";
        break;
      default:
        semana = "No existe dia";
        
    }
    System.out.println("El dia es: " + semana);
}
}
